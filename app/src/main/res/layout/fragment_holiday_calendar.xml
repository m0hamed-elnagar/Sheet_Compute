<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- CardView للتقويم -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="التقويم"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp"/>

<!--                <com.prolificinteractive.materialcalendarview.MaterialCalendarView-->
<!--                    android:id="@+id/calendarView"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="300dp"-->
<!--                    app:mcv_firstDayOfWeek="saturday"-->
<!--                    app:mcv_selectionColor="#7B1FA2"-->
<!--                    app:mcv_showOtherDates="all" />-->
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CardView للإجازات الأسبوعية -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_weekly_holiday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الإجازات الأسبوعية"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:id="@+id/ll_weekly_days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_saturday"
                        style="@style/WeekDayCheckbox"
                        android:text="السبت"/>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_sunday"
                        style="@style/WeekDayCheckbox"
                        android:text="الأحد"/>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_monday"
                        style="@style/WeekDayCheckbox"
                        android:text="الإثنين"/>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_tuesday"
                        style="@style/WeekDayCheckbox"
                        android:text="الثلاثاء"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_wednesday"
                        style="@style/WeekDayCheckbox"
                        android:text="الأربعاء"/>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_thursday"
                        style="@style/WeekDayCheckbox"
                        android:text="الخميس"/>

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cb_friday"
                        style="@style/WeekDayCheckbox"
                        android:text="الجمعة"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- CardView للإجازات الرسمية -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_official_holiday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الإجازات الرسمية"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="#333333"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_single_day"
                        style="@style/ButtonStyle"
                        android:text="إجازة ليوم واحد"
                        android:layout_marginEnd="8dp"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_range_days"
                        style="@style/ButtonStyle"
                        android:text="إجازة متعددة الأيام"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>