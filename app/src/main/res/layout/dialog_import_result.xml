<?xml version="1.0" encoding="utf-8"?>
<LinearLayout    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="?android:attr/windowBackground">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Import Result"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Section 1: Added to DB -->
    <TextView
        android:id="@+id/textAddedCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Added to database: 0"
        android:textSize="16sp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/textDuplicateCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Duplicates not added: 0"
        android:textSize="16sp"
        android:layout_marginBottom="12dp" />

    <TextView
        android:id="@+id/textErrorFile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No error file generated."
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSaveReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save to Downloads"
        app:icon="@drawable/ic_download"
        app:iconPadding="8dp"
        app:iconGravity="start"
        style="@style/Widget.MaterialComponents.Button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonShareWhatsapp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share via WhatsApp"
        app:icon="@drawable/whatsapp"
        app:iconPadding="8dp"
        app:iconGravity="start"
        app:iconTint="@color/green_500"
        style="@style/Widget.MaterialComponents.Button" />
    <Button
        android:id="@+id/buttonClose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Close" />

</LinearLayout>
